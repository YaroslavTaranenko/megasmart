doctype html
html(ng-app="megasmart")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
        link(rel='stylesheet', href='/stylesheets/main.css')
        script(src='//localhost:35730/livereload.js' type='text/javascript')
        script(src="/javascripts/angular.min.js")
        script(src="/javascripts/angular-animate.js")

    body(ng-controller="mainCtrl")
        .container
            main-menu(lang="lang")
                  
            div(scroll ng-class='{min:boolChangeClass}')
         
            content-wrapper
                block content
            footer
                .footer-border
                .footer-wrapper
                    .footer-content

    script(src="/javascripts/app.min.js")